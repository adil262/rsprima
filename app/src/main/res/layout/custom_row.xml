<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:padding="2dp"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="15dp"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/rl_klik"
            android:layout_width="match_parent"
            android:background="@color/teal_200"
            android:layout_height="match_parent"
            android:focusable="true"
            android:foreground="?selectableItemBackground">


            <TextView
                android:id="@+id/tx_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="30dp"
                android:text="@string/tx_nama"
                android:textColor="#000"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.095" />

            <TextView
                android:id="@+id/tx_deskripsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="50dp"
                android:text="@string/tx_deskripsi"
                android:textColor="#000"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/tx_nama"
                app:layout_constraintTop_toBottomOf="parent" />

            <TextView
                android:id="@+id/tx_jumlah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="30dp"
                android:text="Jumlah"
                android:textColor="#000"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/tx_nama"
                app:layout_constraintTop_toBottomOf="@id/tx_deskripsi" />

                <TextView
                    android:id="@+id/tx_keterangan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/tx_keterangan"
                    android:textColor="#000"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tx_nama"
                    app:layout_constraintTop_toBottomOf="@id/tx_jumlah"
                    app:layout_constraintVertical_bias="0.005" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>